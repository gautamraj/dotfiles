# Gautams
# Cross-platform ls with colors
/bin/ls --color=tty -d /bin/ls > /dev/null 2>&1
if [ $? -eq 0 ]; then
  alias ls='ls --color=tty'
else
  alias ls='ls -G'
fi

alias lt='ls -altr'
alias sl='ls'

# Git (overrides git zsh defaults)
alias gcp='git commit -am cp'
alias gg='git grep'

# Shortcuts to folders
